@*    OBS - TILFØJE VALIDERINGER HVOR DET MANGLER*@

@*            TITLE*@
<div class="form-group">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control mb-3" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>



@*OBS - FÅ DATE OG TIME FELTER PÅ LINJE*@
@*            EVENT START - time and date*@
<div class="row">
    <label asp-for="EventStartDate" class="control-label"></label>
    <div class="col">
        <input type=date id=e asp-for="EventStartDate" class="form-control">
        <script>
            document.getElementById('e').value = new Date().toISOString().substring(0, 10);
        </script>
        @*   <input type="date" asp-for="EventStartDate" class="form-control" />*@
        <span asp-validation-for="EventStartDate" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="EventStartTime" class="control-label"></label>
        <input type="time" value="18:00" asp-for="EventStartTime" class="form-control" />
    </div>
</div>

@*            EVENT ENDS - time and date*@
<div class="row">
    <label asp-for="EventEndDate" class="control-label"></label>
    <div class="col">
        <input type=date id=f asp-for="EventEndDate" class="form-control">
        <script>
            document.getElementById('f').value = new Date().toISOString().substring(0, 10);
        </script>
        <span asp-validation-for="EventEndDate" class="text-danger"></span>
    </div>
    <div class="col">
         <label asp-for="EventEndTime" class="control-label"></label>
        <input type="time" value="18:00" asp-for="EventEndTime" class="form-control" />
    </div>
</div>



@*OBS - LAVE SÅ FLUEBEN I ONLINE DISABLER DE NÆSTE FELTER*@
@*            ONLINE EVENT?*@
<div class="form-group mt-3 mb-2">
    <label asp-for="Online" class="control-label"></label>
    <input type="checkbox" asp-for="Online" class="form-check-input" />
    <span asp-validation-for="Online" class="text-danger"></span>
</div>

